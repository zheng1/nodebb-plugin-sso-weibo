{
	"id": "nodebb-plugin-sso-weibo",
	"name": "NodeBB Weibo SSO",
	"description": "NodeBB Plugin that allows users to login/register via their Weibo account.",
	"url": "https://github.com/zheng1/nodebb-plugin-sso-weibo",
	"library": "./library.js",
	"hooks": [
		{ "hook": "filter:auth.init", "method": "getStrategy" },
		{ "hook": "filter:admin.header.build", "method": "addMenuItem" },
		{ "hook": "static:app.load", "method": "init" },
		{ "hook": "filter:user.delete", "method": "deleteUserData" }
	],
	"templates": "./templates"
}